    "pretty": true,
    "baseUrl": "./src",
    "sourceMap": true,
    "target": "es6",
    "outDir": "./dist",
    "resolveJsonModule": true,
    "experimentalDecorators": true
  },
  "include": [
      "src/**/*.ts",
  ],
  "exclude": [
      "node_modules"
  ]
}
